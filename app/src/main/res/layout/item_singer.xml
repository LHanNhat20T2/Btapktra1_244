<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:background="#93B3E3"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/container"
        android:backgroundTint="#B71C1C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="999px"
            android:layout_marginTop="16dp"
            >
            <ImageView
                android:id="@+id/img_hinh"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_ten"
            android:layout_width="227dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/cv_img"
            android:width="270dp"
            android:fontFamily="sans-serif-medium"
            android:text="ten"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp" />
        <TextView
            android:fontFamily="sans-serif-medium"
            android:id="@+id/tv_nghedanh"
            android:text="nghe danh"
            android:layout_toRightOf="@+id/cv_img"
            android:layout_below="@+id/tv_ten"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="24dp"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_width="230dp"
            android:lineHeight="1.2px"
            android:layout_height="38sp"/>

        <TextView
            android:fontFamily="sans-serif-medium"
            android:id="@+id/tv_quocgia"
            android:text="quốc gia"
            android:minWidth="160dp"
            android:minHeight="40dp"
            android:layout_toRightOf="@+id/cv_img"
            android:layout_below="@+id/tv_nghedanh"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="24dp"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_width="120dp"
            android:layout_height="24dp"/>
        <TextView
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="60dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_sosao"
            android:text="số sao"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textColor="#F6DE0A"
            android:layout_toRightOf="@+id/tv_quocgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>
<!--    line-->
    <View
        android:layout_marginTop="10dp"
        android:layout_below="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#2B8F7E"/>

</RelativeLayout>